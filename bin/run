#!/bin/bash

CC=${CC:-g++}
CFLAGS=${CFLAGS:--static -lm -s -x c++ -Wall -O2 -std=c++11}

run() {
  local file=$1
  local dir=$(mktemp -d)
  if [ -t 0 ]; then
    touch $dir/input
  else
    cat > $dir/input
  fi
  $CC $CFLAGS -o $dir/exe $file
  if [[ $? -eq 0 ]]; then
    if [[ $# -eq 1 ]]; then
      $dir/exe < $dir/input
    else
      $dir/exe < $dir/input > $dir/output && \
        diff $dir/output $2
    fi
    rm -r $dir
  fi
}

if [[ $# -ne 1 ]]; then
  echo "Usage: run <file> [expected-file]"
else
  run $@
fi
